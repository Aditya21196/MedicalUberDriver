<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aditya.medicaluberdriver.LoginActivity">

    <EditText
        android:id="@+id/email_etLA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="email"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/pwd_etLA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/email_etLA"
        android:layout_marginTop="49dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="password"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/logIn_bLA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="LOG IN"
        android:layout_below="@+id/pwd_etLA"
        android:onClick="LogIn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="68dp" />

    <Button
        android:id="@+id/SignUp_bLA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/logIn_bLA"
        android:onClick="SignUp"
        android:layout_marginEnd="75dp"
        android:text="SIGN UP" />
</RelativeLayout>
